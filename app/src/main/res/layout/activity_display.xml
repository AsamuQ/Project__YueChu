<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/top"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/returnbtn"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/falsepic" />

        <TextView
            android:id="@+id/menu_n"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="菜谱"
            android:textColor="@color/bg_black" />

        <Button
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical|center_horizontal"
            android:text="收藏" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/finished"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/chengpintu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="菜谱名"
                    android:textColor="@color/bg_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="主料"
                android:textColor="@color/bg_black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="主料名称"
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/main_num"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="用量"
                    android:textColor="@color/bg_black" />

            </LinearLayout>

            <com.example.yuechu.page_my.WrapContentListView
                android:id="@+id/main_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/fu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="辅料"
                android:textColor="@color/bg_black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fu_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="辅料名称"
                    android:textColor="@color/bg_black" />

                <TextView
                    android:id="@+id/fu_num"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="用量"
                    android:textColor="@color/bg_black" />

            </LinearLayout>

            <com.example.yuechu.page_my.WrapContentListView
                android:id="@+id/fu_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/step_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="做法步骤"
                android:textColor="@color/bg_black" />

            <com.example.yuechu.page_my.WrapContentListView
                android:id="@+id/step_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <LinearLayout
                android:id="@+id/Lother"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_marginBottom="40px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:text="其他"
                    android:textColor="@color/bg_black" />

                <LinearLayout
                    android:id="@+id/prepare"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="5px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prepare_b"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="#00ffffff"
                        android:gravity="center_vertical|start"
                        android:text="准备时间" />

                    <TextView
                        android:id="@+id/prepare_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/bg_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginBottom="5px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cook_b"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="#00ffffff"
                        android:gravity="center_vertical|start"
                        android:text="烹饪时间" />

                    <TextView
                        android:id="@+id/cook_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/bg_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taste"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginBottom="5px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/taste_b"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="#00ffffff"
                        android:gravity="center_vertical|start"
                        android:text="口味" />

                    <TextView
                        android:id="@+id/taste_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/bg_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginBottom="5px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/difficulty_b"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="#00ffffff"
                        android:gravity="center_vertical|start"
                        android:text="难度" />

                    <TextView
                        android:id="@+id/difficulty_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/bg_black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
